<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeComplaintsActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/krem" />

    <View
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/backgroundtv" />

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="340dp"
        android:gravity="center"
        android:background="@drawable/head" />

    <EditText
        android:id="@+id/editTextComplaints"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textStyle="bold"
        android:hint="Enter Your Complaints... "
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="110dp" />

    <EditText
        android:id="@+id/editTextEnterPN"
        android:layout_width="match_parent"
        android:hint="Enter Your Contact Number... "
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="340dp"
        android:inputType="number"
         />



    <Button
        android:id="@+id/sendMC"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:text="SEND"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="76dp"
        android:layout_marginTop="390dp"
        android:background="@drawable/mainbuttons" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="157.5dp"
        android:layout_marginEnd="157.5dp"
        android:layout_marginTop="475dp"
        android:src="@drawable/logo"
        app:civ_border_color="#FF000000"
        app:civ_border_width="4dp" />

    <TextView
        android:id="@+id/headMakeCom"
        android:layout_width="208dp"
        android:layout_height="37dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="99dp"
        android:gravity="center"
        android:text="MAKE COMPLAINTS"
        android:background="@drawable/head"
        android:textColor="#533935" />

</RelativeLayout>